---
import { Image } from "astro:assets";
import aurora1 from "../assets/1.png";
import aurora2 from "../assets/2.png";
import aurora3 from "../assets/3.png";
import { useAstroTranslations } from "../i18n/utils";
const t = useAstroTranslations(Astro);
---

<style>
  .how-to-see img {
    max-width: 100%;
    height: auto;
    margin: 20px 0;
    border-radius: 20px;
  }

  .how-to-see p {
    margin-bottom: 20px;
    line-height: 1.6;
  }

  /*.how-to-see h2 {
      font-size: 36px;

    }*/

  .images {
    display: flex;
    gap: 30px;
    overflow-x: auto; /* Горизонтальная прокрутка */
    scroll-behavior: smooth; /* Плавная прокрутка */
    margin: 40px 0 0 0;
    white-space: nowrap; /* Предотвращает перенос карточек на новую строку */
    justify-content: space-between;
  }

  .image-slider-container {
    position: relative;
    margin: 0 auto;
  }

  .imag {
    flex: 0 0 auto; /* Фиксирует размер карточки */
    width: 360px;
  }

  .slider-button {
    position: absolute;
    top: 50%; /* Вертикальное центрирование */
    transform: translateY(-50%); /* Корректное центрирование */
    /* background: rgba(0, 0, 0, 0.5); /* Полупрозрачный фон */
    color: black;
    border: none;
    cursor: pointer;
    padding: 5px 15px;
    z-index: 1000; /* Поверх карточек */
    font-size: 30px;
  }

  .slider-button.left {
    left: -50px;
  }

  .slider-button.right {
    right: -50px;
  }

  @media (max-width: 952px) {
    .slider-button {
      display: none !important;
    }
  }
  @media (max-width: 482px) {
    .imag {
      width: 90%;
    }
  }
</style>

<section
  class="how-to-see bg-[url('/images/auroraback_how.png')] bg-contain bg-[0px_50px] bg-no-repeat py-12 sm:bg-[0px_20px]"
  id="how-to-see"
>
  <h2><a href="#how-to-see">{t("HowToSee.title")}</a></h2>
  <p>
    {t("HowToSee.text1")}
  </p>
  <ul>
    <li>
      1. {t("HowToSee.point1")}
    </li>
    <li>
      2. {t("HowToSee.point2")}
    </li>
    <li>
      3. {t("HowToSee.point3")}
    </li>
    <li>
      4. {t("HowToSee.point4")}
    </li>
    <li>
      5. {t("HowToSee.point5")}
    </li>
  </ul>
  <p></p>
  <p>
    {t("HowToSee.text2")}
  </p>
  <div class="image-slider-container">
    <button class="slider-button left" id="slideLeft">&#8249;</button>
    <div class="images" id="slider">
      <div class="imag">
        <Image src={aurora1} alt="Северное Сияние" />
      </div>
      <div class="imag">
        <Image src={aurora2} alt="Северное Сияние" />
      </div>
      <div class="imag">
        <Image src={aurora3} alt="Северное Сияние" />
      </div>
    </div>
    <button class="slider-button right" id="slideRight">&#8250;</button>
  </div>
</section>

<script is:inline>
  {
    function initSlider() {
      const slider = document.getElementById("slider");
      const slideLeft = document.getElementById("slideLeft");
      const slideRight = document.getElementById("slideRight");

      if (!slider) return;

      // Проверяем, нужен ли скролл
      const totalWidth = Array.from(slider.children).reduce(
        (sum, item) => sum + item.offsetWidth,
        0,
      );
      const visibleWidth = slider.offsetWidth;

      if (totalWidth > visibleWidth) {
        // Показываем кнопки и активируем прокрутку
        slideLeft.style.display = "block";
        slideRight.style.display = "block";

        slideLeft.addEventListener("click", () => {
          slider.scrollBy({ left: -380, behavior: "smooth" });
        });

        slideRight.addEventListener("click", () => {
          slider.scrollBy({ left: 380, behavior: "smooth" });
        });
      } else {
        // Скрываем кнопки, если скролл не нужен
        slideLeft.style.display = "none";
        slideRight.style.display = "none";
      }
    }

    window.addEventListener("load", initSlider);
    window.addEventListener("resize", initSlider);
  }
</script>
