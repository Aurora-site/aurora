---
import { Image } from "astro:assets";
import LOGO from "../assets/logo.png";
import "../styles/styles.css";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Перенаправление в магазин</title>

    <!-- ✅ Яндекс.Метрика -->
    <script type="text/javascript">
      (function (m, e, t, r, i, k, a) {
        m[i] =
          m[i] ||
          function () {
            (m[i].a = m[i].a || []).push(arguments);
          };
        m[i].l = 1 * new Date();
        // prettier-ignore
        (k = e.createElement(t)), (a = e.getElementsByTagName(t)[0]);
        k.async = 1;
        k.src = r;
        a.parentNode.insertBefore(k, a);
      })(
        window,
        document,
        "script",
        "https://mc.yandex.ru/metrika/tag.js",
        "ym",
      );

      ym(105295871, "init", {
        clickmap: true,
        trackLinks: true,
        webvisor: true,
        accurateTrackBounce: true,
      });
    </script>
    <noscript>
      <div>
        <img
          src="https://mc.yandex.ru/watch/105295871"
          style="position:absolute; left:-9999px;"
          alt=""
        />
      </div>
    </noscript>

    <style>
      body {
        margin: 0;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: black;
        color: white;
        overflow: hidden;
        transition: opacity 0.5s ease;
      }

      .container {
        text-align: center;
        animation: fadeIn 1s ease-out forwards;
      }

      .logo {
        width: 80px;
        height: 80px;
        animation: pulse 2s infinite ease-in-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
          opacity: 1;
        }
        50% {
          transform: scale(1.05);
          opacity: 0.9;
        }
      }
    </style>

    <script is:inline>
      const ua = navigator.userAgent || navigator.vendor || window.opera;
      let target = "https://polarlights.pro/app";

      if (/android/i.test(ua)) {
        target = "https://www.rustore.ru/catalog/app/com.polarlights";
      } else if (/iPad|iPhone|iPod/.test(ua) && !window.MSStream) {
        target =
          "https://apps.apple.com/ru/app/северное-сияние-карта-прогноз/id6744652523";
      }

      window.addEventListener("DOMContentLoaded", () => {
        const redirectDelay = 1500; // задержка перед редиректом

        if (typeof ym === "function") {
          // Отправляем цель
          ym(105295871, "reachGoal", "redirect_started");

          // Сообщаем Метрике, что визит не отказ
          ym(105295871, "notBounce", {
            callback: () => {
              setTimeout(() => {
                document.body.style.opacity = "0";
                setTimeout(() => (window.location.href = target), 500);
              }, redirectDelay - 500);
            },
          });

          // Фолбэк на случай блокировки Метрики
          setTimeout(() => {
            document.body.style.opacity = "0";
            setTimeout(() => (window.location.href = target), 500);
          }, redirectDelay);
        } else {
          // Если Метрика не загрузилась
          setTimeout(() => {
            document.body.style.opacity = "0";
            setTimeout(() => (window.location.href = target), 500);
          }, redirectDelay);
        }
      });
    </script>
  </head>

  <body>
    <div class="container">
      <Image src={LOGO} alt="Логотип" class="logo" />
      <h1>Переходим к приложению</h1>
      <p>Перенаправляем вас на нужную страницу</p>
    </div>
  </body>
</html>
